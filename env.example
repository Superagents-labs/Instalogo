# =============================================================================
# TELEGRAM BOT CONFIGURATION
# =============================================================================

# Telegram Bot Token (get from @BotFather)
BOT_TOKEN=your_telegram_bot_token_here

# Bot username (without @, used for sticker pack naming)
BOT_USERNAME=your_bot_username

# Telegram payment provider token (for star purchases)
PROVIDER_TOKEN=your_provider_token_here

# =============================================================================
# AI/ML API CONFIGURATION
# =============================================================================

# OpenAI API Key (for image generation with DALL-E and GPT models)
OPENAI_API_KEY=your_openai_api_key_here

# Replicate API (for FLUX via Replicate)
REPLICATE_API_TOKEN=your_replicate_api_token_here
# Preferred: per-image pricing (per Replicate FLUX.1 pricing)
# e.g., FLUX.1 schnell: 0.003, dev: 0.03, pro: 0.055
FLUX_PRICE_PER_IMAGE_USD=0.003

# OpenRouter API Key (alternative to OpenAI, currently not used but available)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# FAL API Key (for additional AI services, currently not used but available)
FAL_KEY=your_fal_api_key_here

# =============================================================================
# DATABASE CONFIGURATION (UNIFIED MONGODB)
# =============================================================================

# MongoDB connection string for main database (includes user data, sessions, feedback)
MONGO_URI=mongodb://localhost:27017/logoai

# MongoDB connection string for BullMQ job queue (can be same as above)
MONGODB_URI=mongodb://localhost:27017/logoai

# Legacy Redis URL (deprecated - now using MongoDB for everything)
# REDIS_URL=redis://localhost:6379

# =============================================================================
# STORAGE CONFIGURATION (AWS S3 / LocalStack)
# =============================================================================

# S3 bucket name for storing generated images
S3_BUCKET_NAME=logoai-bucket

# AWS credentials (use 'test' for LocalStack development)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key

# AWS region
AWS_REGION=us-east-1

# AWS S3 endpoint (use http://localhost:4566 for LocalStack development)
AWS_ENDPOINT=https://s3.amazonaws.com

# =============================================================================
# RATE LIMITING & USAGE CONTROLS
# =============================================================================

# Maximum requests per user per day
MAX_REQUESTS_PER_DAY=50

# Maximum generations per user per day
MAX_GENERATIONS_PER_USER=10

# =============================================================================
# DEVELOPMENT ENVIRONMENT SETTINGS
# =============================================================================

# Node environment (development, production, test)
NODE_ENV=development

# Port for the application (if using webhooks)
PORT=3000

# Webhook URL (for production deployment)
WEBHOOK_URL=https://your-domain.com/webhook

# =============================================================================
# LOGGING & MONITORING
# =============================================================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable debug mode (true/false)
DEBUG=false

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# JWT secret for session encryption (if used)
JWT_SECRET=your_jwt_secret_here

# Encryption key for sensitive data
ENCRYPTION_KEY=your_encryption_key_here

